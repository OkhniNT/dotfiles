#!/bin/zsh

case $1 in
    -l)
        file="$2"
        xresources="$HOME/.cache/wal/xresources-light"
        light="-l"
        ;;
    *)
        file="$1"
        xresources="$HOME/.cache/wal/xresources-dark"
        light=""
        ;;
esac

wal -c; wal -e -s -t $light -i "$file"
feh --bg-fill "$file"
rm ~/.fehbg
cp $file ~/.config/back.png

xrdb $xresources
kill -SIGUSR1 $(pidof st)
sleep 0.5
pkill -HUP awesome
