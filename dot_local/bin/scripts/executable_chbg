#!/bin/zsh

case $1 in
    -l)
        file="$2"
        xresources="$HOME/.config/xinit/xresources-kanagawa-lotus"
        light="-l"
        ;;
    *)
        file="$1"
        xresources="$HOME/.config/xinit/xresources-kanagawa-dragon"
        light=""
        ;;
esac

# wal -c; wal -e -s -t $light -i "$file"
feh --bg-fill "$file"
rm ~/.fehbg
cp $file ~/.config/back.png

xrdb $xresources
kill -SIGUSR1 $(pidof st)
# sleep 0.5
herbstclient reload
